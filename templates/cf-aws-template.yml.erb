      refresh_interval: 300
      node_timeout: 15
      whitelist:
      - mongodb_mongolab-dev
      - smtp_sendgrid-dev
      - redis_redistogo-dev
      service_mappings:
      - cc_name: mongodb
        cc_provider: mongolab-dev
        ad_name: mongodb
        ad_provider: mongolab-dev
      - cc_name: smtp
        cc_provider: sendgrid-dev
        ad_name: smtp
        ad_provider: sendgrid-dev
      - cc_name: redis
        cc_provider: redistogo-dev
