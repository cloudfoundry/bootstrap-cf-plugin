        ad_provider: redistogo-dev
      appdirect:
        endpoint: "https://dev3cloudfoundry.appdirect.com"
        key: "k"
        secret: "s"
    oauth2_gateway:
      token: oauth2-token

- name: service_nodes
  template:
  - redis_node_ng
  - mongodb_node_ng
  - mysql_node_ng
  - postgresql_node_ng
  - rabbit_node_ng
  instances: 1
  resource_pool: services-large
  persistent_disk: 7168
  networks:
  - name: services
    static_ips:
    - <%= ip( 3, 'services.static') %>
  properties:
    plan: "100"
    redis_node:
      supported_versions: ["2.6"]
      default_version: "2.6"
      health_check_port: 2345
      warden_socket_path: '/tmp/warden_redis.sock'
    mongodb_node:
      supported_versions: ["2.2"]
      default_version: "2.2"
      max_tmp: 900
